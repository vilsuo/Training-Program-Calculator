<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.controllers.RootViewController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    <children>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <children>
                <Label fx:id="errorLabel" textFill="RED" alignment="CENTER" textAlignment="CENTER"/>

                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <Label text="One rep max:"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                    <TextField fx:id="insertOneRepMaxtextField"
                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Weekly increment:"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                    <ComboBox fx:id="chooseIncrementComboBox" onAction="#onIncrementChoosen"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Button text="Calculate" onAction="#onCalculateButtonPressed"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
           </children>
        </VBox>
        <fx:include fx:id="trainingCycleView" source="TrainingCycleView.fxml"/>
    </children>
</HBox>